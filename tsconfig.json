{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "strict": true,
    "lib": ["esnext"],
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "baseUrl": "src",
    "paths": {
      "@schema/*": ["schema/*"],
      "@middlewares/*": ["middlewares/*"],
      "@generated/*": ["generated/*"],
      "@config/*": ["config/*"],
      "@lib/*": ["lib/*"],
      "@services/*": ["services/*"],
      "@models/*": ["models/*"],
      "@controllers/*": ["controllers/*"],
      "@interfaces/*": ["interfaces/*"]
    }
  },
  "ts-node": {
    "swc": true,
    "require": ["tsconfig-paths/register"]
  },
  "include": ["src/**/*.ts"]
}
